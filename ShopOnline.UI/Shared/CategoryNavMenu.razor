@*﻿@page "/ProductsByCategory/{CategoryId:int}"*@
@page "/CategoryNavMenu"


@if (Categories == null && ErrorMessage == null)
{
    <LoaderCircle />
}
else if (ErrorMessage != null)
{
    <NotFound ErrorMessage="@ErrorMessage" />
}
else
{
    @foreach (var category in Categories)
    {
        var link = "/ProductsByCategory/" + category.Id;

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@category.IconCSS"></span>&nbsp;@category.Name
            </NavLink>
        </div>
    }
}